{
    "include": [
        "lib/*.*"
    ],
    "compilerOptions": {
        "pretty": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": false,

        "target": "es6",
        "lib": ["es6"],
        "module": "commonjs",
        "moduleResolution": "node",

        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    }
}
